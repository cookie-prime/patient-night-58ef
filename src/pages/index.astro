---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{SITE_TITLE}</title>
    <meta name="description" content={SITE_DESCRIPTION}>
    <style>
        /* Reset and base styles */
        *, *::before, *::after {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            line-height: 1.7;
            color: #f5f5f5;
            background-color: #111827; /* Dark background */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        a {
            color: #6ee7b7; /* Teal link color */
            text-decoration: none;
            transition: color 0.3s ease;
        }
        a:hover {
            color: #14b8a6; /* Darker teal on hover */
        }
        h1, h2, h3 {
            margin-bottom: 0.5em;
            font-weight: 700;
            line-height: 1.2;
        }
        h1 {
            font-size: 3em;
            color: #fff;
        }
        h2 {
            font-size: 2.25em;
            color: #cbd5e0;
        }
        h3 {
            font-size: 1.5em;
            color: #94a3b8;
        }
        p {
            margin-bottom: 1em;
            color: #d1d5db;
        }

        /* Layout */
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            width: 100%;
        }
        header {
            padding: 2rem 0;
            border-bottom: 1px solid #374151;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        header h1{
            font-size: 2.25em;
        }
        main {
            flex: 1;
        }
        footer {
            padding: 2rem 0;
            margin-top: 4rem;
            border-top: 1px solid #374151;
            text-align: center;
            color: #9ca3af;
        }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 4rem 0;
            background-image: linear-gradient(to bottom, #1f2937, #111827); /* Darker gradient */
        }
        .hero h1 {
            font-size: 3.75em;
            color: #fff;
            margin-bottom: 0.75rem;
        }
        .hero p {
            font-size: 1.25rem;
            color: #d1d5db;
            margin-bottom: 1.5rem;
        }
        .btn-primary {
            display: inline-block;
            padding: 0.8rem 2rem;
            background-color: #6ee7b7; /* Teal button */
            color: #0369a1; /* Darker text on button */
            font-weight: 600;
            border-radius: 0.5rem;
            text-decoration: none;
            transition: background-color 0.3s ease, color 0.3s ease;
            font-size: 1.1rem;
            border: 2px solid #6ee7b7;
        }
        .btn-primary:hover {
            background-color: #14b8a6; /* Darker teal on hover */
            color: #fff;
            border-color: #14b8a6;
        }

        /* Featured Articles */
        .featured-articles {
            margin-top: 6rem;
        }
        .featured-articles h2 {
            font-size: 2.5rem;
            margin-bottom: 2rem;
            text-align: center;
            color: #fff;
        }
        .articles-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }
        .card {
            background-color: #1f2937; /* Dark card background */
            padding: 2rem;
            border-radius: 0.75rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5); /* Subtle shadow */
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            border: 1px solid #374151;
        }
        .card:hover {
            transform: translateY(-0.5rem);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.6);
        }
        .card h3 {
            font-size: 1.25rem;
            margin-bottom: 0.75rem;
        }
        .card h3 a{
            color: #fff;
        }

        .card p {
            color: #d1d5db;
            margin-bottom: 1rem;
        }
        .read-more {
            display: inline-block;
            color: #6ee7b7;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease, transform 0.3s ease;
        }
        .read-more:hover {
            color: #fff;
            transform: translateX(0.5rem);
        }

        /* Categories */
        .categories {
            margin-top: 6rem;
        }
        .categories h2 {
            font-size: 2.5rem;
            margin-bottom: 2rem;
            text-align: center;
            color: #fff;
        }
        .categories-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1rem;
            list-style: none;
        }
        .categories-list li a {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            background-color: #374151; /* Dark category background */
            color: #fff;
            border-radius: 1.5rem; /* Fully rounded corners */
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.3s ease;
            font-size: 1rem;
            border: 2px solid #4b5563;
        }
        .categories-list li a:hover {
            background-color: #6ee7b7; /* Teal on hover */
            color: #0369a1;
            transform: scale(1.1);
            border-color: #6ee7b7;
        }

        /* Call to Action */
        .call-to-action {
            text-align: center;
            padding: 4rem 0;
            background-color: #1f2937;
            border-radius: 0.75rem;
            margin-top: 6rem;
        }
        .call-to-action h2 {
            font-size: 2.5rem;
            color: #fff;
            margin-bottom: 1.5rem;
        }
        .call-to-action p {
            font-size: 1.25rem;
            color: #d1d5db;
            margin-bottom: 2rem;
        }
        .btn-secondary {
            display: inline-block;
            padding: 0.8rem 2rem;
            background-color: transparent;
            color: #6ee7b7;
            font-weight: 600;
            border-radius: 0.5rem;
            text-decoration: none;
            transition: background-color 0.3s ease, color 0.3s ease;
            font-size: 1.1rem;
            border: 2px solid #6ee7b7;
        }
        .btn-secondary:hover {
            background-color: #6ee7b7;
            color: #0369a1;
            border-color: #6ee7b7;
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 2.5rem 0;
            border-top: 1px solid #374151;
            color: #9ca3af;
            font-size: 0.9rem;
        }
        footer a{
            color: #6ee7b7;
        }
        footer a:hover{
             color: #fff;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .container {
                padding: 1.5rem;
            }
            .hero h1 {
                font-size: 3em;
            }
            .hero p {
                font-size: 1.2rem;
            }
            .articles-grid {
                grid-template-columns: 1fr;
            }
            .featured-articles h2,
            .categories h2,
            .call-to-action h2{
                font-size: 2rem;
            }
             header {
                flex-direction: column;
                text-align: center;
            }
            header h1{
                margin-bottom: 1rem;
            }
        }
        @media (max-width: 480px) {
            .hero h1 {
                font-size: 2.5rem;
            }
            .hero p {
                font-size: 1rem;
            }
             .btn-primary, .btn-secondary{
                font-size: 1rem;
                padding: 0.75rem 1.5rem;
            }
            header h1{
                font-size: 1.75rem;
            }
        }
    </style>
</head>
