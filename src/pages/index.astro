---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// Example featured articles and categories (replace with your dynamic data or CMS integration)
const featuredArticles = [
  { title: "Exploring the Cosmos with Astro", link: "/blog/exploring-the-cosmos", description: "Discover the power of Astro for building fast and modern websites." },
  { title: "5 Tips for Better Web Performance", link: "/blog/web-performance-tips", description: "Learn how to optimize your website for speed and reliability." },
  { title: "How to Use Astro Integrations", link: "/blog/astro-integrations", description: "A guide to adding tools like Tailwind and React to your Astro project." },
];

const categories = [
  { name: "Web Development", link: "/category/web-development" },
  { name: "Astro Tutorials", link: "/category/astro-tutorials" },
  { name: "Performance Optimization", link: "/category/performance" },
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Welcome to ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="blog-landing">
			<section class="hero">
				<h1>Welcome to {SITE_TITLE} ðŸš€</h1>
				<p>{SITE_DESCRIPTION}</p>
				<a href="/about" class="btn-primary">Learn More About Us</a>
			</section>
			
			<section class="featured-articles">
				<h2>Featured Articles</h2>
				<div class="articles-grid">
					{featuredArticles.map(article => (
						<article class="card" key={article.link}>
							<h3><a href={article.link}>{article.title}</a></h3>
							<p>{article.description}</p>
							<a href={article.link} class="read-more">Read More â†’</a>
						</article>
					))}
				</div>
			</section>
			
			<section class="categories">
				<h2>Explore Categories</h2>
				<ul class="categories-list">
					{categories.map(category => (
						<li key={category.link}>
							<a href={category.link}>{category.name}</a>
						</li>
					))}
				</ul>
			</section>
			
			<section class="call-to-action">
				<h2>Start Your Blogging Journey</h2>
				<p>Whether you're a seasoned developer or just getting started, {SITE_TITLE} is here to inspire and guide you.</p>
				<a href="/blog" class="btn-secondary">Browse All Blog Posts</a>
			</section>
		</main>
		<Footer />
	</body>
</html>
